<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswPopup}">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="{DynamicResource StswPopup.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource StswPopup.Static.Border}"/>

        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerClipping" Value="True"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="3"/>
        
        <Setter Property="se:StswScrollControl.CanContentScroll" Value="True"/>
        <Setter Property="se:StswScrollControl.IsDynamic" Value="False"/>
        <Setter Property="se:StswScrollControl.PanningMode" Value="Both"/>
        <Setter Property="se:StswScrollControl.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="se:StswScrollControl.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>
    
    
    
    <!-- StswPopup child's ControlTemplate -->
    <DataTemplate x:Key="StswPopupChildTemplate">
        <se:StswBorder x:Name="PART_MainBorder"
                       Background="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                       BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                       BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                       CornerClipping="{Binding CornerClipping, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                       CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}">
            <se:StswScrollViewer x:Name="PART_ScrollViewer"
                                 Focusable="False"
                                 se:StswScrollControl.AutoScroll="{Binding (se:StswScrollControl.AutoScroll), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                 se:StswScrollControl.CanContentScroll="{Binding (se:StswScrollControl.CanContentScroll), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                 se:StswScrollControl.IsBusy="{Binding (se:StswScrollControl.IsBusy), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                 se:StswScrollControl.IsDynamic="{Binding (se:StswScrollControl.IsDynamic), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                 se:StswScrollControl.PanningMode="{Binding (se:StswScrollControl.PanningMode), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                 se:StswScrollControl.HorizontalScrollBarVisibility="{Binding (se:StswScrollControl.HorizontalScrollBarVisibility), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                 se:StswScrollControl.VerticalScrollBarVisibility="{Binding (se:StswScrollControl.VerticalScrollBarVisibility), RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}">
                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                  DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"
                                  Focusable="False"
                                  Margin="{Binding Padding, RelativeSource={RelativeSource AncestorType={x:Type se:StswPopup}}}"/>
            </se:StswScrollViewer>
        </se:StswBorder>
    </DataTemplate>
    
</ResourceDictionary>