<Button x:Class="StswExpress.IconButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:se="clr-namespace:StswExpress"
        mc:Ignorable="d" d:DesignWidth="100">
    <Button.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="{Binding CornerRadius, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding CornerRadius, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="{x:Null}">
                    <Setter Property="CornerRadius" Value="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.5}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Button.Resources>
    <Button.Style>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4777"/>
            <Setter Property="BorderBrush" Value="#9777"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A8BE"/>
                    <Setter Property="BorderBrush" Value="#A468"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#1777"/>
                    <Setter Property="BorderBrush" Value="#3777"/>
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Button.Style>
    <StackPanel Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType=Button}}" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="{Binding PanelMargin, RelativeSource={RelativeSource AncestorType=Button}}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding PanelMargin, RelativeSource={RelativeSource AncestorType=Button}}" Value="0">
                        <Setter Property="Margin" Value="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.3;0.1}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Resources>
        <!-- icon -->
        <Grid VerticalAlignment="Center">
            <Grid.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Height" Value="{Binding IconSize, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    <Setter Property="Margin" Value="{Binding IconMargin, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IconSize, RelativeSource={RelativeSource AncestorType=Button}}" Value="{x:Null}">
                            <Setter Property="Height" Value="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=2}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IconMargin, RelativeSource={RelativeSource AncestorType=Button}}" Value="0">
                            <Setter Property="Margin" Value="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.15}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <Image Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Button}}"/>
            <Image Height="{Binding Height, RelativeSource={RelativeSource AncestorType=Grid}, Converter={se:conv_Size}, ConverterParameter=0.5}"
                   Source="{Binding SubIcon, RelativeSource={RelativeSource AncestorType=Button}}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </Grid>
        <!-- header -->
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Visibility="{Binding Text, RelativeSource={RelativeSource AncestorType=Button}, Converter={se:conv_NotNull}}">
            <Label Content="{Binding Text, RelativeSource={RelativeSource AncestorType=Button}}">
                <Label.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Padding" Value="{Binding LabelPadding, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding LabelPadding, RelativeSource={RelativeSource AncestorType=Button}}" Value="0">
                                <Setter Property="Padding" Value="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.3}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Resources>
            </Label>
            <TextBlock Text="{Binding SubText, RelativeSource={RelativeSource AncestorType=Button}}" Foreground="Gray"
					   FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Button}, Converter={se:conv_Size}, ConverterParameter=0.8}"
					   Visibility="{Binding SubText, RelativeSource={RelativeSource AncestorType=Button}, Converter={se:conv_NotNull}}"/>
        </StackPanel>
    </StackPanel>
</Button>
