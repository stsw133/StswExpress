<se:StswNavigationPanelBase x:Class="StswExpress.StswNavigationPanel"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:se="clr-namespace:StswExpress"
                            mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="100">

    <se:StswNavigationPanelBase.Template>
        <ControlTemplate TargetType="{x:Type se:StswNavigationPanelBase}">
            <se:ClippingBorder Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="{TemplateBinding CornerRadius}"
                               SnapsToDevicePixels="True">
                <ContentPresenter />
            </se:ClippingBorder>
        </ControlTemplate>
    </se:StswNavigationPanelBase.Template>
</se:StswNavigationPanelBase>
