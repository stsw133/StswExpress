                </x:Array>
            </Setter.Value>
        </Setter>
        <Setter Property="ColorPaletteStandard">
            <Setter.Value>
                <x:Array Type="{x:Type SolidColorBrush}">
                    <SolidColorBrush Color="#C00000"/>
                    <SolidColorBrush Color="#F00000"/>
                    <SolidColorBrush Color="#FFC000"/>
                    <SolidColorBrush Color="#FFFF00"/>
