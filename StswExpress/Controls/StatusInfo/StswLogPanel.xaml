<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswLogPanel}">
        <Setter Property="Background" Value="{DynamicResource StswPanel.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource StswPanel.Static.Border}"/>

        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="SubCornerRadius" Value="10"/>
        <Setter Property="SubMargin" Value="3"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="SubPadding" Value="5"/>

        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type se:StswLogPanel}">
                    <se:StswClippingBorder x:Name="PART_MainBorder"
                                           Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="{TemplateBinding CornerRadius}"
                                           SnapsToDevicePixels="True">
                        <se:StswScrollViewer x:Name="PART_ScrollViewer" HorizontalScrollBarVisibility="Disabled" IsDynamic="True">
                            <ItemsControl ItemsSource="{Binding Items, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Margin="{TemplateBinding Padding}"
                                          SnapsToDevicePixels="True">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <se:StswHeader CornerRadius="{Binding SubCornerRadius, RelativeSource={RelativeSource AncestorType={x:Type se:StswLogPanel}}}"
                                                       Margin="{Binding SubMargin, RelativeSource={RelativeSource AncestorType={x:Type se:StswLogPanel}}}"
                                                       Padding="{Binding SubPadding, RelativeSource={RelativeSource AncestorType={x:Type se:StswLogPanel}}}"
                                                       HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top">
                                            <se:StswHeader.Template>
                                                <ControlTemplate TargetType="{x:Type se:StswHeader}">
                                                    <se:StswClippingBorder x:Name="PART_MainBorder"
                                                                           Background="{TemplateBinding Background}"
                                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                           CornerRadius="{TemplateBinding CornerRadius}"
                                                                           SnapsToDevicePixels="True">
                                                        <DockPanel Margin="{TemplateBinding Padding}">
                                                            <!-- icon -->
                                                            <se:StswIcon x:Name="PART_Icon"
                                                                         Data="{Binding IconData, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}}"
                                                                         Fill="{Binding IconFill, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}}"
                                                                         Focusable="False"
                                                                         Stroke="{Binding IconStroke, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}}"
                                                                         StrokeThickness="{Binding IconStrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}}"
                                                                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                                                <se:StswIcon.Style>
                                                                    <Style TargetType="{x:Type se:StswIcon}">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}}" Value="{x:Null}">
                                                                                <Setter Property="Height" Value="{Binding ActualHeight, ElementName=PART_Content}"/>
                                                                                <Setter Property="Width" Value="{Binding ActualHeight, ElementName=PART_Content}"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}, Converter={x:Static se:StswNotNullConverter.Instance}}" Value="True">
                                                                                <Setter Property="Scale" Value="{Binding IconScale, RelativeSource={RelativeSource AncestorType={x:Type se:StswHeader}}}"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </se:StswIcon.Style>
                                                            </se:StswIcon>
                                                            <!-- content -->
                                                            <ContentPresenter x:Name="PART_Content"
                                                                              Focusable="False"
                                                                              Margin="6 0"
                                                                              RecognizesAccessKey="True"
                                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                              Visibility="{TemplateBinding ContentVisibility}"/>
                                                        </DockPanel>
                                                    </se:StswClippingBorder>
                                                </ControlTemplate>
                                            </se:StswHeader.Template>
                                            <DockPanel>
                                                <se:StswComponentButton x:Name="PART_FunctionButton" DockPanel.Dock="Right"
                                                                        Command="{Binding RemoveLogCommand, RelativeSource={RelativeSource AncestorType={x:Type se:StswLogPanel}}}"
                                                                        CommandParameter="{Binding}"
                                                                        IconData="{x:Static se:StswIcons.Close}"
                                                                        VerticalAlignment="Top"
                                                                        Visibility="{Binding IsClosable, RelativeSource={RelativeSource AncestorType={x:Type se:StswLogPanel}}, Converter={x:Static se:StswBoolConverter.Instance}}"/>
                                                <se:StswText DockPanel.Dock="Top" Text="{Binding DateTime, StringFormat=yyyy-MM-dd HH:mm:ss}" FontSize="11" FontWeight="Bold"/>
                                                <se:StswText DockPanel.Dock="Top" Text="{Binding Description}" TextWrapping="Wrap"/>
                                            </DockPanel>
                                            <se:StswHeader.Style>
                                                <Style TargetType="{x:Type se:StswHeader}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type}" Value="None">
                                                            <Setter Property="Background" Value="{DynamicResource StswLog.None.Background}"/>
                                                            <Setter Property="IconData" Value="{x:Static se:StswIcons.Circle}"/>
                                                            <Setter Property="IconFill" Value="{DynamicResource StswLog.None.Foreground}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Debug">
                                                            <Setter Property="Background" Value="{DynamicResource StswLog.Debug.Background}"/>
                                                            <Setter Property="IconData" Value="{x:Static se:StswIcons.CodeBracesCircle}"/>
                                                            <Setter Property="IconFill" Value="{DynamicResource StswLog.Debug.Foreground}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Error">
                                                            <Setter Property="Background" Value="{DynamicResource StswLog.Error.Background}"/>
                                                            <Setter Property="IconData" Value="{x:Static se:StswIcons.CloseCircle}"/>
                                                            <Setter Property="IconFill" Value="{DynamicResource StswLog.Error.Foreground}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Information">
                                                            <Setter Property="Background" Value="{DynamicResource StswLog.Information.Background}"/>
                                                            <Setter Property="IconData" Value="{x:Static se:StswIcons.Information}"/>
                                                            <Setter Property="IconFill" Value="{DynamicResource StswLog.Information.Foreground}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Success">
                                                            <Setter Property="Background" Value="{DynamicResource StswLog.Success.Background}"/>
                                                            <Setter Property="IconData" Value="{x:Static se:StswIcons.CheckCircle}"/>
                                                            <Setter Property="IconFill" Value="{DynamicResource StswLog.Success.Foreground}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Warning">
                                                            <Setter Property="Background" Value="{DynamicResource StswLog.Warning.Background}"/>
                                                            <Setter Property="IconData" Value="{x:Static se:StswIcons.AlertCircle}"/>
                                                            <Setter Property="IconFill" Value="{DynamicResource StswLog.Warning.Foreground}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </se:StswHeader.Style>
                                        </se:StswHeader>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </se:StswScrollViewer>
                    </se:StswClippingBorder>
                    <!--
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" TargetName="PART_MainBorder"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                    -->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>