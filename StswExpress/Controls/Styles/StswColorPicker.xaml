<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswColorPicker}">

        <Setter Property="Background" Value="{DynamicResource StswColorPicker.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource StswColorPicker.Static.Border}"/>
        <Setter Property="OpacityDisabled" Value="0.3"/>
        
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SubBorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="SubPadding" Value="3"/>

        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type se:StswColorPicker}">
                    <se:ClippingBorder x:Name="PART_MainBorder"
                                       Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="{TemplateBinding CornerRadius}"
                                       Padding="{TemplateBinding Padding}"
                                       SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto" MinWidth="24"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!-- picker -->
                            <Border Grid.Column="0" Grid.Row="0"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding SubBorderThickness}"
                                    Margin="{TemplateBinding SubPadding}">
                                <Canvas Height="180" Width="180" SnapsToDevicePixels="False">
                                    <Grid x:Name="PART_ColorGrid" Background="White" Height="180" Width="180" SnapsToDevicePixels="False">
                                        <Rectangle SnapsToDevicePixels="False">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                                    <GradientStop Color="#F00" Offset="0"/>
                                                    <GradientStop Color="#FF0" Offset="0.1666666666"/>
                                                    <GradientStop Color="#0F0" Offset="0.3333333333"/>
                                                    <GradientStop Color="#0FF" Offset="0.5"/>
                                                    <GradientStop Color="#00F" Offset="0.6666666666"/>
                                                    <GradientStop Color="#F0F" Offset="0.8333333333"/>
                                                    <GradientStop Color="#F00" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Rectangle.Fill>
                                            <Rectangle.OpacityMask>
                                                <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                                    <GradientStop Color="#FFFF" Offset="0"/>
                                                    <GradientStop Color="#0FFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Grid>
                                    <Ellipse x:Name="PART_ColorEllipse" SnapsToDevicePixels="False" Stroke="Black" Height="5" Width="5"/>
                                </Canvas>
                            </Border>
                            <!-- selected color -->
                            <Border Grid.Column="1" Grid.Row="0"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding SubBorderThickness}"
                                    Margin="{TemplateBinding SubPadding}">
                                <Border.Background>
                                    <VisualBrush TileMode="Tile" Viewport="0 0 8 8" ViewportUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <UniformGrid Height="24" Width="24">
                                                <Rectangle Fill="#3777"/>
                                                <Rectangle Fill="#7777"/>
                                                <Rectangle Fill="#7777"/>
                                                <Rectangle Fill="#3777"/>
                                            </UniformGrid>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Border.Background>
                                <Rectangle Fill="{Binding SelectedColor, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static se:StswColorConverter.Instance}}"/>
                            </Border>
                            
                            <!-- V -->
                            <se:StswSlider Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding SubBorderThickness}"
                                           CornerRadius="0" Margin="0 10 0 5"
                                           ThumbBorderThickness="2" ThumbSize="15" TrackSize="10"
                                           ThumbBackground="White" ThumbBackgroundMouseOver="White" ThumbBackgroundDragging="White"
                                           ThumbBorderBrush="Gray" ThumbBorderBrushMouseOver="Gray" ThumbBorderBrushDragging="Gray"
                                           IsSnapToTickEnabled="True" TickFrequency="0.01" LargeChange="0.1"
                                           Maximum="1" Value="{Binding SelectedColorV, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <se:StswSlider.Background>
                                    <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                        <GradientStop Offset="0" Color="Black"/>
                                        <GradientStop Offset="1" Color="{Binding PickedColor, RelativeSource={RelativeSource AncestorType={x:Type se:StswColorPicker}}, FallbackValue=Black}"/>
                                    </LinearGradientBrush>
                                </se:StswSlider.Background>
                            </se:StswSlider>
                            <!-- A -->
                            <DockPanel x:Name="PART_Alpha" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding SubBorderThickness}"
                                        Margin="{TemplateBinding SubPadding}"
                                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}">
                                    <Border.Background>
                                        <VisualBrush TileMode="Tile" Viewport="0 0 8 8" ViewportUnits="Absolute">
                                            <VisualBrush.Visual>
                                                <UniformGrid Height="24" Width="24">
                                                    <Rectangle Fill="#3777"/>
                                                    <Rectangle Fill="#7777"/>
                                                    <Rectangle Fill="#7777"/>
                                                    <Rectangle Fill="#3777"/>
                                                </UniformGrid>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Border.Background>
                                </Border>
                                <Label Content="A"/>
                                <Label DockPanel.Dock="Right"
                                       Content="{Binding SelectedColorA, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                       Width="30" HorizontalContentAlignment="Right"/>
                                <se:StswSlider IsSnapToTickEnabled="True" TickFrequency="1"
                                               Maximum="255" Value="{Binding SelectedColorA, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                               MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                            <!-- R -->
                            <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
                                <Border Background="#F00"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding SubBorderThickness}"
                                        Margin="{TemplateBinding SubPadding}"
                                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
                                <Label Content="R"/>
                                <Label DockPanel.Dock="Right"
                                       Content="{Binding SelectedColorR, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                       Width="30" HorizontalContentAlignment="Right"/>
                                <se:StswSlider IsSnapToTickEnabled="True" TickFrequency="1"
                                               Maximum="255" Value="{Binding SelectedColorR, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                               MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                            <!-- G -->
                            <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
                                <Border Background="#0F0"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding SubBorderThickness}"
                                        Margin="{TemplateBinding SubPadding}"
                                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
                                <Label Content="G"/>
                                <Label DockPanel.Dock="Right"
                                       Content="{Binding SelectedColorG, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                       Width="30" HorizontalContentAlignment="Right"/>
                                <se:StswSlider IsSnapToTickEnabled="True" TickFrequency="1"
                                               Maximum="255" Value="{Binding SelectedColorG, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                               MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                            <!-- B -->
                            <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5">
                                <Border Background="#00F"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding SubBorderThickness}"
                                        Margin="{TemplateBinding SubPadding}"
                                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
                                <Label Content="B"/>
                                <Label DockPanel.Dock="Right"
                                       Content="{Binding SelectedColorB, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                       Width="30" HorizontalContentAlignment="Right"/>
                                <se:StswSlider IsSnapToTickEnabled="True" TickFrequency="1"
                                               Maximum="255" Value="{Binding SelectedColorB, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                               MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                        </Grid>
                    </se:ClippingBorder>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsAlphaEnabled" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_Alpha" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="{Binding OpacityDisabled, RelativeSource={RelativeSource TemplatedParent}}" TargetName="PART_MainBorder" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>