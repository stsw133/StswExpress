<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswLoadingCircle}">

        <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="OpacityDisabled" Value="0.3"/>
        
        <Setter Property="Scale" Value="auto"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type se:StswLoadingCircle}">
                    <Viewbox>
                        <Ellipse x:Name="PART_Ellipse"
                                 Width="12" Height="12" StrokeDashArray="24" RenderTransformOrigin="0.5 0.5"
                                 Stroke="{TemplateBinding Fill}">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="PART_Rotation" Angle="0" />
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="PART_Rotation"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Viewbox>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="{Binding OpacityDisabled, RelativeSource={RelativeSource TemplatedParent}}" TargetName="PART_Ellipse" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>