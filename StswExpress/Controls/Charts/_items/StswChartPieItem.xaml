<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswChartPieItem}">
        <Setter Property="Background" Value="{Binding Title, RelativeSource={RelativeSource Self}, Converter={x:Static se:StswColorConverter.Instance}, ConverterParameter='G B?20%'}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type se:StswChartPieItem}">
                    <Grid>
                        <Grid.Resources>
                            <se:StswBindingProxy x:Key="proxy" Proxy="{Binding RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Grid.Resources>
                        <!-- pie element -->
                        <Ellipse RenderTransformOrigin="0.5 0.5"
                                 Stroke="{TemplateBinding Background}"
                                 StrokeDashArray="{TemplateBinding StrokeDashArray}"
                                 StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType={x:Type se:StswChartPie}}}"
                                 ToolTipService.BetweenShowDelay="0"
                                 ToolTipService.InitialShowDelay="0"
                                 Height="1000" Width="1000">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="{Binding Proxy.Angle, Source={StaticResource proxy}}"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.ToolTip>
                                <se:StswChartTip ShowDescription="True" ShowName="True"/>
                            </Ellipse.ToolTip>
                        </Ellipse>
                        <!-- percentage text -->
                        <StackPanel x:Name="OPT_Percentage"
                                    IsHitTestVisible="False"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <StackPanel.RenderTransform>
                                <TranslateTransform X="{Binding Proxy.Center.X, Source={StaticResource proxy}}"
                                                    Y="{Binding Proxy.Center.Y, Source={StaticResource proxy}}"/>
                            </StackPanel.RenderTransform>
                            <se:StswOutlinedText Fill="{DynamicResource StswText.Static.Foreground}"
                                                 FontSize="{TemplateBinding TextSize}"
                                                 FontWeight="Bold"
                                                 Stroke="{DynamicResource StswBox.Static.Background}"
                                                 StrokeThickness="4"
                                                 Text="{Binding Percentage, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:N0}%}"/>
                        </StackPanel>
                    </Grid>
                    <!-- triggers -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPercentageVisible" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" TargetName="OPT_Percentage"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>