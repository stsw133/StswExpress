<StackPanel x:Class="StswExpress.NumericDescription"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:se="clr-namespace:StswExpress"
            mc:Ignorable="d" d:DesignWidth="100" d:Background="White"
            Orientation="Horizontal">
    <Label Content="{Binding Number, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}}" FontWeight="Medium">
        <Label.Style>
            <Style TargetType="{x:Type Label}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding NumberForeground, RelativeSource={RelativeSource AncestorType=StackPanel}, Converter={se:conv_NotNull}}" Value="True">
                        <Setter Property="Foreground" Value="{Binding NumberForeground, RelativeSource={RelativeSource AncestorType=StackPanel}}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Label.Style>
    </Label>
    <Label Content="{Binding Description, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}}"/>
</StackPanel>
