<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswPager}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        
        <Setter Property="IsTabStop" Value="False"/>
        
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type se:StswPager}">
                    <se:StswClippingBorder x:Name="PART_MainBorder"
                                           Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="{TemplateBinding CornerRadius}"
                                           SnapsToDevicePixels="True">
                        <Grid>
                            <!-- content -->
                            <ContentPresenter Focusable="False"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <!-- buttons -->
                            <se:StswComponentRepeater x:Name="PART_ButtonUp" Grid.Column="1" Grid.Row="0"
                                                      Background="{se:StswDynamicResource StswButton.Static.Background, Converter={x:Static se:StswColorAlphaConverter.Instance}, ConverterParameter=80%}"
                                                      IconData="{x:Static se:StswIcons.MenuUp}" IconScale="1.5"
                                                      HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center"
                                                      Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={x:Static se:StswBoolConverter.Instance}}"
                                                      Command="{Binding UpCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <se:StswComponentRepeater x:Name="PART_ButtonDown" Grid.Column="1" Grid.Row="2"
                                                      Background="{se:StswDynamicResource StswButton.Static.Background, Converter={x:Static se:StswColorAlphaConverter.Instance}, ConverterParameter=80%}"
                                                      IconData="{x:Static se:StswIcons.MenuDown}" IconScale="1.5"
                                                      HorizontalAlignment="Center" VerticalAlignment="Bottom"  HorizontalContentAlignment="Center"
                                                      Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={x:Static se:StswBoolConverter.Instance}}"
                                                      Command="{Binding DownCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <se:StswComponentRepeater x:Name="PART_ButtonLeft" Grid.Column="0" Grid.Row="1"
                                                      Background="{se:StswDynamicResource StswButton.Static.Background, Converter={x:Static se:StswColorAlphaConverter.Instance}, ConverterParameter=80%}"
                                                      IconData="{x:Static se:StswIcons.MenuLeft}" IconScale="1.5"
                                                      HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                                      Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={x:Static se:StswBoolConverter.Instance}}"
                                                      Command="{Binding LeftCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <se:StswComponentRepeater x:Name="PART_ButtonRight" Grid.Column="2" Grid.Row="1"
                                                      Background="{se:StswDynamicResource StswButton.Static.Background, Converter={x:Static se:StswColorAlphaConverter.Instance}, ConverterParameter=80%}"
                                                      IconData="{x:Static se:StswIcons.MenuRight}" IconScale="1.5"
                                                      HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                                      Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={x:Static se:StswBoolConverter.Instance}}"
                                                      Command="{Binding RightCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Grid>
                    </se:StswClippingBorder>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ButtonUp"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ButtonDown"/>
                        </Trigger>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ButtonLeft"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_ButtonRight"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>