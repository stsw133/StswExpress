<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:RgsClippingBorder}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type se:RgsClippingBorder}">
                    <Border x:Name="PART_MainBorder"
                            CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource TemplatedParent}}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <Border x:Name="PART_VisualBorder"
                                    Background="{TemplateBinding Background, Converter={x:Static se:StswColorAlphaConverter.Instance}, ConverterParameter=100%}" />
                            <ContentPresenter x:Name="PART_ContentPresenter" />
                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>