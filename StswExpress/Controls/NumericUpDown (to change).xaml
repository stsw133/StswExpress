<UserControl x:Class="StswExpress.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:se="clr-namespace:StswExpress"
             mc:Ignorable="d" d:DesignWidth="100"
             VerticalAlignment="Stretch">
    <DockPanel>
        <UniformGrid DockPanel.Dock="{Binding ButtonsAlignment, RelativeSource={RelativeSource AncestorType=UserControl}}" Columns="1">
            <RepeatButton Content="▲" Padding="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Multiply}, ConverterParameter=0.5 0}"
                          FontSize="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Multiply}, ConverterParameter=0.4}"
                          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Click="BtnUp_Click"/>
            <RepeatButton Content="▼" Padding="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Multiply}, ConverterParameter=0.5 0}"
                          FontSize="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Multiply}, ConverterParameter=0.4}"
                          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Click="BtnDown_Click"/>
        </UniformGrid>
        <se:ExtTextBox Text="{Binding Value, TargetNullValue='', RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=LostFocus}"
                       HorizontalContentAlignment="{Binding BoxAlignment, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalContentAlignment="Center"
                       LostFocus="TextBox_LostFocus"/>
    </DockPanel>
</UserControl>
