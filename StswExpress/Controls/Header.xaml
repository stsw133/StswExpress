<UserControl x:Class="StswExpress.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:se="clr-namespace:StswExpress"
             mc:Ignorable="d" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <!-- icon -->
        <se:ExtIcon Icon="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    SubIcon="{Binding SubIcon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    IconScale="{Binding IconScale, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Visibility="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={se:conv_NotNull}}">
            <se:ExtIcon.Margin>
                <MultiBinding Converter="{se:conv_Calculate}" ConverterParameter="*0.1*">
                    <Binding Path="iSize" Source="{x:Static se:Settings.Default}"/>
                    <Binding Path="IconScale" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                </MultiBinding>
            </se:ExtIcon.Margin>
        </se:ExtIcon>
        <!-- text -->
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Scale}, ConverterParameter=0.5;0.2;0.5;0.2}"
                    Visibility="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={se:conv_NotNull}}">
            <!-- main text -->
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" TextWrapping="Wrap"/>
            <!-- sub text 1 -->
            <TextBlock Text="{Binding SubText1, RelativeSource={RelativeSource AncestorType=UserControl}}" TextWrapping="Wrap"
                       FontSize="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Scale}, ConverterParameter=0.8}"
                       Visibility="{Binding SubText1, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={se:conv_NotNull}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{Binding SubTextColor1, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SubTextColor1, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                <Setter Property="Foreground" Value="Gray"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <!-- sub text 2 -->
            <TextBlock Text="{Binding SubText2, RelativeSource={RelativeSource AncestorType=UserControl}}" TextWrapping="Wrap"
                       FontSize="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Scale}, ConverterParameter=0.8}"
                       Visibility="{Binding SubText2, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={se:conv_NotNull}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{Binding SubTextColor2, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SubTextColor2, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                <Setter Property="Foreground" Value="Gray"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
