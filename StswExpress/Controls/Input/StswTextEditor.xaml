                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_FontColorHighlight"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_FontText"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_SectionAlignLeft"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_SectionAlignCenter"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_SectionAlignRight"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_SectionAlignJustify"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="PART_SectionText"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource StswBox.MouseOver.Background}" TargetName="PART_MainBorder"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource StswBox.MouseOver.Border}" TargetName="PART_MainBorder"/>
