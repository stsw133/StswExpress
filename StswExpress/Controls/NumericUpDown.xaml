<UserControl x:Class="StswExpress.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:se="clr-namespace:StswExpress"
             mc:Ignorable="d" d:DesignWidth="100"
             VerticalAlignment="Stretch">
    <DockPanel>
        <DockPanel.Resources>
            <Style TargetType="{x:Type RepeatButton}">
                <Setter Property="Background" Value="{Binding cButtonStaticBackground, Source={x:Static se:Themes.Default}}"/>
                <Setter Property="BorderBrush" Value="{Binding cButtonStaticBorder, Source={x:Static se:Themes.Default}}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.5;0}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{Binding cButtonMouseOverBackground, Source={x:Static se:Themes.Default}}"/>
                        <Setter Property="BorderBrush" Value="{Binding cButtonMouseOverBorder, Source={x:Static se:Themes.Default}}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Resources>
        <UniformGrid DockPanel.Dock="{Binding ButtonsAlignment, RelativeSource={RelativeSource AncestorType=UserControl}}" Columns="1">
            <RepeatButton Content="▲"
                          FontSize="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.4}"
                          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Click="BtnUp_Click"/>
            <RepeatButton Content="▼"
                          FontSize="{Binding iSize, Source={x:Static se:Settings.Default}, Converter={se:conv_Size}, ConverterParameter=0.4}"
                          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Click="BtnDown_Click"/>
        </UniformGrid>
        <se:ExtTextBox Text="{Binding Value, TargetNullValue='', RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=LostFocus}"
                       HorizontalContentAlignment="{Binding BoxAlignment, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalContentAlignment="Center"
                       LostFocus="TextBox_LostFocus"/>
    </DockPanel>
</UserControl>
