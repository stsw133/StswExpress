<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:se="clr-namespace:StswExpress">

    <Style TargetType="{x:Type se:StswText}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- style for StswText in: "StswDataGridColorColumn" -->
    <Style x:Key="StswDataGridColorColumnDisplayStyle" TargetType="{x:Type se:StswText}" BasedOn="{StaticResource {x:Type se:StswText}}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- style for StswText in: "StswDataGridDateColumn" -->
    <Style x:Key="StswDataGridDateColumnDisplayStyle" TargetType="{x:Type se:StswText}" BasedOn="{StaticResource {x:Type se:StswText}}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- style for StswText in: "StswDataGridNumberColumn" -->
    <Style x:Key="StswDataGridNumberColumnDisplayStyle" TargetType="{x:Type se:StswText}" BasedOn="{StaticResource {x:Type se:StswText}}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- style for StswText in: "StswDataGridPathColumn" -->
    <Style x:Key="StswDataGridPathColumnDisplayStyle" TargetType="{x:Type se:StswText}" BasedOn="{StaticResource {x:Type se:StswText}}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- style for StswText in: "StswDataGridTextColumn" -->
    <Style x:Key="StswDataGridTextColumnDisplayStyle" TargetType="{x:Type se:StswText}" BasedOn="{StaticResource {x:Type se:StswText}}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

</ResourceDictionary>