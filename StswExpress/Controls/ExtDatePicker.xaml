<DatePicker x:Class="StswExpress.ExtDatePicker"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:se="clr-namespace:StswExpress"
            mc:Ignorable="d" d:DesignWidth="100"
            VerticalContentAlignment="Center"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Window}}">
    <DatePicker.Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}"/>
    </DatePicker.Style>
</DatePicker>
