<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="{DynamicResource Color900}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="{DynamicResource ForegroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="{DynamicResource ForegroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="{DynamicResource ForegroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{DynamicResource Color850}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlDarkBrushKey}" Color="{DynamicResource Color700}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlLightLightBrushKey}" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ActiveBorderBrushKey}" Color="{DynamicResource Color700}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{DynamicResource SelectionColor2}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HotTrackColorKey}" Color="{DynamicResource SelectionColor1}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlDarkDarkBrushKey}" Color="{DynamicResource Color600}"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderThumb.Static.Background" Color="{DynamicResource Color700}"/>
    <SolidColorBrush x:Key="SliderThumb.Static.Border" Color="{DynamicResource Color600}"/>
    <SolidColorBrush x:Key="SliderThumb.Static.Foreground" Color="{DynamicResource ForegroundSecondaryColor}"/>
    <SolidColorBrush x:Key="SliderThumb.MouseOver.Background" Color="{DynamicResource Color600}"/>
    <SolidColorBrush x:Key="SliderThumb.MouseOver.Border" Color="{DynamicResource Color500}"/>
    <SolidColorBrush x:Key="SliderThumb.Pressed.Background" Color="{DynamicResource Color500}"/>
    <SolidColorBrush x:Key="SliderThumb.Pressed.Border" Color="{DynamicResource Color400}"/>
    <SolidColorBrush x:Key="SliderThumb.Disabled.Background" Color="{DynamicResource Color850}"/>
    <SolidColorBrush x:Key="SliderThumb.Disabled.Border" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="SliderThumb.Track.Background" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="SliderThumb.Track.Border" Color="{DynamicResource Color700}"/>

    <!-- ToolBar -->
    <SolidColorBrush x:Key="ToolBarDarkFill" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarDisabledFill" Color="{DynamicResource Color850}"/>
    <SolidColorBrush x:Key="ToolBarDisabledBorder" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarSeparatorFill" Color="{DynamicResource Color500}"/>
    <SolidColorBrush x:Key="ToolBarButtonHover" Color="{DynamicResource Color700}"/>
    <SolidColorBrush x:Key="ToolBarButtonHoverBorder" Color="{DynamicResource Color600}"/>
    <SolidColorBrush x:Key="ToolBarButtonChecked" Color="{DynamicResource SelectionColor1}"/>
    <SolidColorBrush x:Key="ToolBarButtonPressed" Color="{DynamicResource Color600}"/>
    <SolidColorBrush x:Key="ToolBarButtonPressedBorder" Color="{DynamicResource Color500}"/>
    <SolidColorBrush x:Key="ToolBarMenuBorder" Color="{DynamicResource Color600}"/>
    <SolidColorBrush x:Key="ToolBarSubMenuBackground" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarMenuCheckFill" Color="{DynamicResource Color700}"/>
    <SolidColorBrush x:Key="ToolBarOpenHeaderBackground" Color="{DynamicResource Color800}"/>
    <!-- aero2 original ToolBarTrayBackground : #FF212121 -->
    <SolidColorBrush x:Key="ToolBarTrayBackground" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarHorizontalBackground" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarVerticalBackground" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarGripper" Color="{DynamicResource Color600}"/>
    <SolidColorBrush x:Key="ToolBarToggleButtonHorizontalBackground" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarToggleButtonVerticalBackground" Color="{DynamicResource Color800}"/>
    <SolidColorBrush x:Key="ToolBarComboBoxToggleButtonBorder" Color="{DynamicResource Color800}"/>

    <!-- StatusBar -->
    <SolidColorBrush x:Key="StatusBar.Background" Color="{DynamicResource Color800}"/>

</ResourceDictionary>