<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
                    xmlns:local="clr-namespace:TestApp">

    <Style TargetType="{x:Type local:StswIntegerBox}" BasedOn="{StaticResource StswNumberBoxStyle}">
        <Setter Property="Increment" Value="1"/>
        <Setter Property="SeparatorThickness" Value="2"/>
        <Setter Property="Text" Value="{Binding Value, RelativeSource={RelativeSource Self}, UpdateSourceTrigger=LostFocus, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}}"/>
    </Style>
</ResourceDictionary>