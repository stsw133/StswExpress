<UserControl x:Class="TestApp.StswToggleSwitchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswToggleSwitchContext/>
    </d:UserControl.DataContext>

    <local:ControlsBase ContentAlignmentVisibility="Visible">
        <local:ControlsBase.Description>
            Represents a control that allows the user to toggle between three states: checked, unchecked and indeterminate.
        </local:ControlsBase.Description>
        <!-- properties -->
        <local:ControlsBase.Properties>
            <!-- HasContent -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HasContent"/>
            <se:StswToggleSwitch HorizontalAlignment="Left" IsChecked="{Binding HasContent}"/>
            <!-- IsThreeState -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="IsThreeState"/>
            <se:StswToggleSwitch HorizontalAlignment="Left" IsChecked="{Binding IsThreeState}"/>
        </local:ControlsBase.Properties>
        <!-- content -->
        <UniformGrid DockPanel.Dock="Top" Columns="1" Margin="5" HorizontalAlignment="{Binding HorizontalAlignment}" VerticalAlignment="{Binding VerticalAlignment}">
            <se:StswToggleSwitch Command="{Binding OnClickCommand}"
                                 CommandParameter="1"
                                 Content="{Binding Content1}"
                                 IsChecked="{Binding SelectedOption[0]}"
                                 IsEnabled="{Binding IsEnabled}"
                                 IsThreeState="{Binding IsThreeState}"
                                 Margin="0 0 0 5"
                                 HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{Binding VerticalContentAlignment}"/>
            <se:StswToggleSwitch Command="{Binding OnClickCommand}"
                                 CommandParameter="2"
                                 Content="{Binding Content2}"
                                 IsChecked="{Binding SelectedOption[1]}"
                                 IsEnabled="{Binding IsEnabled}"
                                 IsThreeState="{Binding IsThreeState}"
                                 Margin="0 0 0 5"
                                 HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{Binding VerticalContentAlignment}"/>
            <se:StswToggleSwitch Command="{Binding OnClickCommand}"
                                 CommandParameter="3"
                                 Content="{Binding Content3}"
                                 IsChecked="{Binding SelectedOption[2]}"
                                 IsEnabled="{Binding IsEnabled}"
                                 IsThreeState="{Binding IsThreeState}"
                                 Margin="0 0 0 5"
                                 HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{Binding VerticalContentAlignment}"/>
            <se:StswToggleSwitch Command="{Binding OnClickCommand}"
                                 CommandParameter="4"
                                 Content="{Binding Content4}"
                                 IsChecked="{Binding SelectedOption[3]}"
                                 IsEnabled="{Binding IsEnabled}"
                                 IsThreeState="{Binding IsThreeState}"
                                 Margin="0 0 0 5"
                                 HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{Binding VerticalContentAlignment}"/>
            <se:StswToggleSwitch Command="{Binding OnClickCommand}"
                                 CommandParameter="5"
                                 Content="{Binding Content5}"
                                 IsChecked="{Binding SelectedOption[4]}"
                                 IsEnabled="{Binding IsEnabled}"
                                 IsThreeState="{Binding IsThreeState}"
                                 Margin="0 0 0 5"
                                 GlyphBrushChecked="#F7B"
                                 GlyphBrushUnchecked="#B33"
                                 IconUnchecked="{x:Static se:StswIcons.HeartBroken}"
                                 IconChecked="{x:Static se:StswIcons.Heart}"
                                 HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{Binding VerticalContentAlignment}"/>
        </UniformGrid>
        <!-- status panel -->
        <local:ControlsBase.StatusPanel>
            <se:StswText Margin="5" Padding="5">
                <Run Text="You clicked option "/>
                <Run Text="{Binding ClickOption}" FontWeight="Bold"/>
            </se:StswText>
        </local:ControlsBase.StatusPanel>
    </local:ControlsBase>
</UserControl>
