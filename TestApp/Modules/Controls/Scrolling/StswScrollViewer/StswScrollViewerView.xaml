<UserControl x:Class="TestApp.StswScrollViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswScrollViewerContext/>
    </d:UserControl.DataContext>

    <Grid DockPanel.Dock="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!-- name and description -->
        <se:StswScrollViewer IsDynamic="True">
            <StackPanel Margin="5">
                <se:StswText Padding="5" TextAlignment="Justify" TextWrapping="Wrap">
                    <Run FontSize="20" FontWeight="Bold" Text="{Binding ThisControlName, Mode=OneWay}"/>
                    <LineBreak/>
                    <Run>
                        Represents a control that extends the ScrollViewer class with additional functionality.
                    </Run>
                </se:StswText>
                <StackPanel Margin="5">
                    <se:StswText FontWeight="Medium" Text="Properties:"/>
                    <!-- Alignment -->
                    <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="Alignment (control | content):"/>
                    <UniformGrid>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type HorizontalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding HorizontalAlignment}" SelectedValuePath="Value"/>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type HorizontalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding HorizontalContentAlignment}" SelectedValuePath="Value"/>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type VerticalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding VerticalAlignment}" SelectedValuePath="Value"/>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type VerticalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding VerticalContentAlignment}" SelectedValuePath="Value"/>
                    </UniformGrid>
                    <!-- HorizontalScrollBarVisibility -->
                    <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HorizontalScrollBarVisibility:"/>
                    <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type ScrollBarVisibility}}"
                                     DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding HorizontalScrollBarVisibility}" SelectedValuePath="Value"/>
                    <!-- VerticalScrollBarVisibility -->
                    <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="VerticalScrollBarVisibility:"/>
                    <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type ScrollBarVisibility}}"
                                     DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding VerticalScrollBarVisibility}" SelectedValuePath="Value"/>
                    <!-- IsDynamic -->
                    <se:StswCheckBox Content="IsDynamic" FontSize="15" FontWeight="Medium" IsChecked="{Binding IsDynamic}" Margin="0 3"/>
                    <!-- IsEnabled -->
                    <se:StswCheckBox Content="IsEnabled" FontSize="15" FontWeight="Medium" IsChecked="{Binding IsEnabled}" Margin="0 3"/>
                </StackPanel>
            </StackPanel>
        </se:StswScrollViewer>
        <GridSplitter Width="5"/>
        <!-- control -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <se:StswScrollViewer Height="300"
                                 IsDynamic="{Binding IsDynamic}"
                                 IsEnabled="{Binding IsEnabled}"
                                 Margin="5"
                                 HorizontalScrollBarVisibility="{Binding HorizontalScrollBarVisibility}"
                                 VerticalScrollBarVisibility="{Binding VerticalScrollBarVisibility}"
                                 HorizontalAlignment="{Binding HorizontalAlignment}"
                                 HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                 VerticalAlignment="{Binding VerticalAlignment}"
                                 VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <Rectangle Height="720" Width="1280">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="1 0" EndPoint="0 1">
                            <GradientStop Color="#F00" Offset="0"/>
                            <GradientStop Color="#FF0" Offset="0.1666666666"/>
                            <GradientStop Color="#0F0" Offset="0.3333333333"/>
                            <GradientStop Color="#0FF" Offset="0.5"/>
                            <GradientStop Color="#00F" Offset="0.6666666666"/>
                            <GradientStop Color="#F0F" Offset="0.8333333333"/>
                            <GradientStop Color="#F00" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </se:StswScrollViewer>
            <GridSplitter Height="5" Margin="0 -5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</UserControl>
