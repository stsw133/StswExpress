<UserControl x:Class="TestApp.StswHeaderContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:StswHeaderContainerContext}">

    <local:ControlsBase ContentAlignmentVisibility="Visible">
        <local:ControlsBase.Description>
            Represents a control functioning as label.
        </local:ControlsBase.Description>
        <!-- properties -->
        <local:ControlsBase.Properties>
            <!-- HeaderFontWeight -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HeaderFontWeight"/>
            <se:StswTextBox Margin="0 0 0 3" Text="{Binding HeaderFontWeight}"/>
            <!-- HeaderOrientation -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HeaderOrientation"/>
            <se:StswComboBox ItemsSource="{se:StswEnumToList Orientation}" Margin="0 0 0 3" SelectedValue="{Binding HeaderOrientation}"/>
            <!-- HeaderWidth -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HeaderWidth"/>
            <local:StswDoubleBox Margin="0 0 0 3" Value="{Binding HeaderWidth}"/>
            <!-- IconScale -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="{se:StswNameOf IconScale, Type={x:Type se:StswHeaderContainer}}"/>
            <se:StswTextBox Margin="0 0 0 3" Text="{Binding IconScale}">
                <se:StswTextBox.SubControls>
                    <se:StswSubButton Command="{Binding SetGridLengthFillCommand}" IconData="{x:Static se:StswIcons.Star}"/>
                    <se:StswSubButton Command="{Binding SetGridLengthAutoCommand}" IconData="{x:Static se:StswIcons.AlphaA}" IconScale="2" Margin="-2"/>
                </se:StswTextBox.SubControls>
            </se:StswTextBox>
            <!-- IsBusy -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="{se:StswNameOf IsBusy, Type={x:Type se:StswHeaderContainer}}"/>
            <se:StswToggleSwitch HorizontalAlignment="Left" IsChecked="{Binding IsBusy}"/>
            <!-- IsContentVisible -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="{se:StswNameOf IsContentVisible, Type={x:Type se:StswHeaderContainer}}"/>
            <se:StswToggleSwitch HorizontalAlignment="Left" IsChecked="{Binding IsContentVisible}"/>
        </local:ControlsBase.Properties>
        <!-- content -->
        <StackPanel se:StswHeaderContainer.HeaderAlignment="{Binding HorizontalContentAlignment}"
                    se:StswHeaderContainer.HeaderFontWeight="{Binding HeaderFontWeight}"
                    se:StswHeaderContainer.HeaderOrientation="{Binding HeaderOrientation}"
                    se:StswHeaderContainer.HeaderWidth="{Binding HeaderWidth}"
                    IsEnabled="{Binding IsEnabled}"
                    Margin="5"
                    HorizontalAlignment="{Binding HorizontalAlignment}"
                    VerticalAlignment="{Binding VerticalAlignment}">
            <se:StswHeaderContainer Header="Property 1:"
                                    IconData="{x:Static se:StswIcons.Dice1}"
                                    IconScale="{Binding IconScale}"
                                    IsBusy="{Binding IsBusy}"
                                    IsContentVisible="{Binding IsContentVisible}"
                                    Margin="3"
                                    VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <se:StswTextBox/>
            </se:StswHeaderContainer>
            <se:StswHeaderContainer Header="Optional property 2:"
                                    IconData="{x:Static se:StswIcons.Dice2}"
                                    IconScale="{Binding IconScale}"
                                    IsBusy="{Binding IsBusy}"
                                    IsContentVisible="{Binding IsContentVisible}"
                                    Margin="3"
                                    VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <se:StswTextBox/>
            </se:StswHeaderContainer>
            <se:StswHeaderContainer Header="Test property:"
                                    IconData="{x:Static se:StswIcons.Dice3}"
                                    IconScale="{Binding IconScale}"
                                    IsBusy="{Binding IsBusy}"
                                    IsContentVisible="{Binding IsContentVisible}"
                                    Margin="3"
                                    VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <se:StswTextBox/>
            </se:StswHeaderContainer>
        </StackPanel>
        <!-- status panel -->
        
    </local:ControlsBase>
</UserControl>
