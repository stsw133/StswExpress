<UserControl x:Class="TestApp.StswLabelContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:StswLabelContainerContext}">

    <local:ControlsBase ContentAlignmentVisibility="Visible">
        <local:ControlsBase.Description>
            Represents a control functioning as label.
        </local:ControlsBase.Description>
        <!-- properties -->
        <local:ControlsBase.Properties>
            <!-- HeaderFontWeight -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HeaderFontWeight"/>
            <se:StswTextBox Margin="0 0 0 3" Text="{Binding HeaderFontWeight}"/>
            <!-- HeaderOrientation -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HeaderOrientation"/>
            <se:StswComboBox ItemsSource="{se:StswEnumToList Orientation}" Margin="0 0 0 3" SelectedValue="{Binding HeaderOrientation}"/>
            <!-- HeaderWidth -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="HeaderWidth"/>
            <local:StswDoubleBox Margin="0 0 0 3" Value="{Binding HeaderWidth}"/>
            <!-- IconScale -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="{se:StswNameOf IconScale, Type={x:Type se:StswLabelContainer}}"/>
            <se:StswTextBox Margin="0 0 0 3" Text="{Binding IconScale}">
                <se:StswTextBox.SubControls>
                    <se:StswSubButton Command="{Binding SetGridLengthFillCommand}" IconData="{x:Static se:StswIcons.Star}"/>
                    <se:StswSubButton Command="{Binding SetGridLengthAutoCommand}" IconData="{x:Static se:StswIcons.AlphaA}" IconScale="2" Margin="-2"/>
                </se:StswTextBox.SubControls>
            </se:StswTextBox>
            <!-- IsBusy -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="{se:StswNameOf IsBusy, Type={x:Type se:StswLabelContainer}}"/>
            <se:StswToggleSwitch HorizontalAlignment="Left" IsChecked="{Binding IsBusy}"/>
            <!-- IsContentVisible -->
            <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="{se:StswNameOf IsContentVisible, Type={x:Type se:StswLabelContainer}}"/>
            <se:StswToggleSwitch HorizontalAlignment="Left" IsChecked="{Binding IsContentVisible}"/>
        </local:ControlsBase.Properties>
        <!-- content -->
        <StackPanel se:StswLabelContainer.HeaderAlignment="{Binding HorizontalContentAlignment}"
                    se:StswLabelContainer.HeaderFontWeight="{Binding HeaderFontWeight}"
                    se:StswLabelContainer.HeaderOrientation="{Binding HeaderOrientation}"
                    se:StswLabelContainer.HeaderWidth="{Binding HeaderWidth}"
                    IsEnabled="{Binding IsEnabled}"
                    Margin="5"
                    HorizontalAlignment="{Binding HorizontalAlignment}"
                    VerticalAlignment="{Binding VerticalAlignment}">
            <se:StswLabelContainer Header="Property 1:"
                                   IconData="{x:Static se:StswIcons.Dice1}"
                                   IconScale="{Binding IconScale}"
                                   IsBusy="{Binding IsBusy}"
                                   IsContentVisible="{Binding IsContentVisible}"
                                   Margin="3"
                                   VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <se:StswTextBox/>
            </se:StswLabelContainer>
            <se:StswLabelContainer Header="Optional property 2:"
                                   IconData="{x:Static se:StswIcons.Dice2}"
                                   IconScale="{Binding IconScale}"
                                   IsBusy="{Binding IsBusy}"
                                   IsContentVisible="{Binding IsContentVisible}"
                                   Margin="3"
                                   VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <se:StswTextBox/>
            </se:StswLabelContainer>
            <se:StswLabelContainer Header="Test property:"
                                   IconData="{x:Static se:StswIcons.Dice3}"
                                   IconScale="{Binding IconScale}"
                                   IsBusy="{Binding IsBusy}"
                                   IsContentVisible="{Binding IsContentVisible}"
                                   Margin="3"
                                   VerticalContentAlignment="{Binding VerticalContentAlignment}">
                <se:StswTextBox/>
            </se:StswLabelContainer>
        </StackPanel>
        <!-- status panel -->
        
    </local:ControlsBase>
</UserControl>
