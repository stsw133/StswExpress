<UserControl x:Class="TestApp.StswOutlinedTextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswOutlinedTextContext/>
    </d:UserControl.DataContext>

    <local:ControlsBase ContentAlignmentVisibility="Collapsed">
        <local:ControlsBase.Description>
            Represents a custom outlined text control with various text formatting options.
        </local:ControlsBase.Description>
        <!-- properties -->

        <!-- content -->
        <se:StswOutlinedText Fill="Red"
                             FontSize="20"
                             IsEnabled="{Binding IsEnabled}"
                             Margin="5"
                             Stroke="DarkRed"
                             StrokeThickness="2"
                             Text="Some random text with dark red stroke and red fill"
                             HorizontalAlignment="{Binding HorizontalAlignment}"
                             VerticalAlignment="{Binding VerticalAlignment}"/>
        <!-- status panel -->
        
    </local:ControlsBase>
</UserControl>
