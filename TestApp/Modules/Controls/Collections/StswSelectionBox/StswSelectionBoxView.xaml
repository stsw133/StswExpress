<UserControl x:Class="TestApp.StswSelectionBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswSelectionBoxContext/>
    </d:UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <!-- name and description -->
                <StackPanel Grid.Column="0" Margin="5">
                    <Label DockPanel.Dock="Top">
                        <StackPanel>
                            <TextBlock Text="{Binding ThisControlName}" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Margin="0 5 0 0" TextAlignment="Justify" TextWrapping="Wrap">
                                Represents a control that combines the functionality of a ComboBox and ListBox to allow multiple selection.
                            </TextBlock>
                        </StackPanel>
                    </Label>
                    <!-- Components -->
                    <se:StswCheckBox IsChecked="{Binding Components}">
                        <Label DockPanel.Dock="Top" Content="Components" FontSize="15" FontWeight="Medium"/>
                    </se:StswCheckBox>
                    <!-- IsEnabled -->
                    <se:StswCheckBox IsChecked="{Binding IsEnabled}">
                        <Label DockPanel.Dock="Top" Content="IsEnabled" FontSize="15" FontWeight="Medium"/>
                    </se:StswCheckBox>
                    <!-- IsReadOnly -->
                    <se:StswCheckBox IsChecked="{Binding IsReadOnly}">
                        <Label DockPanel.Dock="Top" Content="IsReadOnly" FontSize="15" FontWeight="Medium"/>
                    </se:StswCheckBox>
                </StackPanel>
                <GridSplitter Margin="-5" Width="5"/>
                <!-- control -->
                <DockPanel Grid.Column="1" Margin="5" VerticalAlignment="Top">
                    <se:StswSelectionBox DockPanel.Dock="Top"
                                         IsEnabled="{Binding IsEnabled}"
                                         IsReadOnly="{Binding IsReadOnly}"
                                         ItemsSource="{Binding Items}"
                                         Margin="5"
                                         Placeholder="Select items..."
                                         SelectedItemsBinding="{Binding SelectedItems}">
                        <se:StswSelectionBox.Components>
                            <se:StswComponentButton IconData="{x:Static se:StswIcons.Close}" Visibility="{Binding Components, Converter={x:Static se:StswBoolConverter.Instance}}" Command="{Binding ClearCommand}"/>
                        </se:StswSelectionBox.Components>
                    </se:StswSelectionBox>
                    <TextBlock DockPanel.Dock="Top" Margin="10">
                        <Run Text="{Binding SelectedItemsCount}" FontWeight="Bold"/>
                        <Run Text=" option(s) are selected"/>
                    </TextBlock>
                </DockPanel>
            </Grid>
        </DockPanel>
    </ScrollViewer>
</UserControl>
