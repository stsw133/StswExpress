<UserControl x:Class="TestApp.StswComponentButtonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswComponentButtonContext/>
    </d:UserControl.DataContext>

    <Grid DockPanel.Dock="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!-- name and description -->
        <se:StswScrollViewer IsDynamic="True">
            <StackPanel Margin="5">
                <se:StswText Padding="5" TextAlignment="Justify" TextWrapping="Wrap">
                    <Run FontSize="20" FontWeight="Bold" Text="{Binding ThisControlName, Mode=OneWay}"/>
                    <LineBreak/>
                    <Run>
                        Represents a control that functions as a component and displays an icon.
                    </Run>
                </se:StswText>
                <StackPanel Margin="5">
                    <se:StswText FontWeight="Medium" Text="Properties:"/>
                    <!-- Alignment -->
                    <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="Alignment (control | content):"/>
                    <UniformGrid>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type HorizontalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding HorizontalAlignment}" SelectedValuePath="Value"/>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type HorizontalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding HorizontalContentAlignment}" SelectedValuePath="Value"/>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type VerticalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding VerticalAlignment}" SelectedValuePath="Value"/>
                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type VerticalAlignment}}"
                                         DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding VerticalContentAlignment}" SelectedValuePath="Value"/>
                    </UniformGrid>
                    <!-- ContentVisibility -->
                    <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="ContentVisibility:"/>
                    <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type Visibility}}"
                                     DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding ContentVisibility}" SelectedValuePath="Value"/>
                    <!-- IconScale -->
                    <se:StswText FontSize="15" FontWeight="Medium" Padding="3" Text="IconScale:"/>
                    <se:StswNumericBox Format="N2" Increment="0.1" Margin="0 0 0 3" Maximum="5" Minimum="0.1" Value="{Binding IconScale}"/>
                    <!-- IsBusy -->
                    <se:StswCheckBox Content="IsBusy" FontSize="15" FontWeight="Medium" IsChecked="{Binding IsBusy}" Margin="0 3"/>
                    <!-- IsEnabled -->
                    <se:StswCheckBox Content="IsEnabled" FontSize="15" FontWeight="Medium" IsChecked="{Binding IsEnabled}" Margin="0 3"/>
                </StackPanel>
            </StackPanel>
        </se:StswScrollViewer>
        <GridSplitter Width="5"/>
        <!-- control -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <UniformGrid Margin="5" Rows="1" HorizontalAlignment="{Binding HorizontalAlignment}">
                <se:StswComponentButton Command="{Binding OnClickCommand}"
                                        ContentVisibility="{Binding ContentVisibility}"
                                        IconData="{x:Static se:StswIcons.Magnify}"
                                        IconScale="{Binding IconScale}"
                                        IsBusy="{Binding IsBusy}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="{Binding HorizontalAlignment}"
                                        HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                        VerticalAlignment="{Binding VerticalAlignment}"
                                        VerticalContentAlignment="{Binding VerticalContentAlignment}">
                    <Label Content="Search" Padding="2 0 0 0" FontSize="11" VerticalContentAlignment="Center"/>
                </se:StswComponentButton>
                <se:StswComponentButton Command="{Binding OnClickCommand}"
                                        ContentVisibility="{Binding ContentVisibility}"
                                        IconData="{x:Static se:StswIcons.Filter}"
                                        IconScale="{Binding IconScale}"
                                        IsBusy="{Binding IsBusy}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="{Binding HorizontalAlignment}"
                                        HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                        VerticalAlignment="{Binding VerticalAlignment}"
                                        VerticalContentAlignment="{Binding VerticalContentAlignment}">
                    <Label Content="Filters" Padding="2 0 0 0" FontSize="11" VerticalContentAlignment="Center"/>
                </se:StswComponentButton>
                <se:StswComponentButton Command="{Binding OnClickCommand}"
                                        ContentVisibility="{Binding ContentVisibility}"
                                        IconData="{x:Static se:StswIcons.Close}"
                                        IconScale="{Binding IconScale}"
                                        IsBusy="{Binding IsBusy}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Margin="0 0 5 0"
                                        HorizontalAlignment="{Binding HorizontalAlignment}"
                                        HorizontalContentAlignment="{Binding HorizontalContentAlignment}"
                                        VerticalAlignment="{Binding VerticalAlignment}"
                                        VerticalContentAlignment="{Binding VerticalContentAlignment}">
                    <Label Content="Clear" Padding="2 0 0 0" FontSize="11" VerticalContentAlignment="Center"/>
                </se:StswComponentButton>
            </UniformGrid>
            <GridSplitter Height="5" Margin="0 -5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
            <se:StswText Grid.Row="1" Margin="5" Padding="5">
                <Run Text="You clicked "/>
                <Run Text="{Binding ClickCounter}" FontWeight="Bold"/>
                <Run Text=" time(s)"/>
            </se:StswText>
        </Grid>
    </Grid>
</UserControl>
