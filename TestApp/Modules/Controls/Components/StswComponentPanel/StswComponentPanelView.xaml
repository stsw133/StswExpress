<UserControl x:Class="TestApp.StswComponentPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswComponentPanelContext/>
    </d:UserControl.DataContext>

    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!-- name and description -->
            <se:RgsScrollViewer>
                <StackPanel Margin="5">
                    <Label>
                        <StackPanel>
                            <TextBlock Text="{Binding ThisControlName}" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Margin="0 5 0 0" TextAlignment="Justify" TextWrapping="Wrap">
                                Represents a panel control that functions as a component and displays an icon.
                                It can expand to show additional components when the mouse is over an icon.
                            </TextBlock>
                        </StackPanel>
                    </Label>
                    <!-- ExpandDirection -->
                    <Label Content="ExpandDirection:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type ExpandDirection}}"
                                     DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding ExpandDirection}" SelectedValuePath="Value"/>
                    <!-- IconScale -->
                    <Label Content="IconScale:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswNumericBox Format="N2" Increment="0.1" Margin="0 0 0 3" Maximum="5" Minimum="0.1" Value="{Binding IconScale}"/>
                    <!-- IsEnabled -->
                    <se:StswCheckBox IsChecked="{Binding IsEnabled}" Margin="0 3">
                        <Label Content="IsEnabled" FontSize="15" FontWeight="Medium"/>
                    </se:StswCheckBox>
                </StackPanel>
            </se:RgsScrollViewer>
            <GridSplitter Margin="-5" Width="5"/>
            <!-- control -->
            <DockPanel Grid.Column="1" Margin="5" VerticalAlignment="Top">
                <se:StswComponentPanel DockPanel.Dock="Top"
                                       ExpandDirection="{Binding ExpandDirection}"
                                       IconScale="{Binding IconScale}"
                                       IsEnabled="{Binding IsEnabled}"
                                       Margin="5">
                    <se:StswComponentButton Command="{Binding OnClickCommand}"
                                            IconData="{x:Static se:StswIcons.Magnify}"
                                            IconScale="{Binding IconScale}"/>
                    <se:StswComponentButton Command="{Binding OnClickCommand}"
                                            IconData="{x:Static se:StswIcons.Filter}"
                                            IconScale="{Binding IconScale}"/>
                    <se:StswComponentButton Command="{Binding OnClickCommand}"
                                            IconData="{x:Static se:StswIcons.Close}"
                                            IconScale="{Binding IconScale}"/>
                </se:StswComponentPanel>
                <TextBlock DockPanel.Dock="Top" Margin="10">
                    <Run Text="You clicked "/>
                    <Run Text="{Binding ClickCounter}" FontWeight="Bold"/>
                    <Run Text=" time(s)"/>
                </TextBlock>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
