<UserControl x:Class="TestApp.StswProgressBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" d:Background="White" d:DesignHeight="450" d:DesignWidth="750">
    <d:UserControl.DataContext>
        <local:StswProgressBarContext/>
    </d:UserControl.DataContext>

    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!-- name and description -->
            <se:StswScrollViewer IsDynamic="True">
                <StackPanel Margin="5">
                    <Label>
                        <StackPanel>
                            <TextBlock Text="{Binding ThisControlName}" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Margin="0 5 0 0" TextAlignment="Justify" TextWrapping="Wrap">
                                Represents a control being a progress bar with additional features such as displaying progress as text and different states.
                            </TextBlock>
                        </StackPanel>
                    </Label>
                    <!-- IsEnabled -->
                    <se:StswCheckBox IsChecked="{Binding IsEnabled}" Margin="0 3">
                        <Label Content="IsEnabled" FontSize="15" FontWeight="Medium"/>
                    </se:StswCheckBox>
                    <!-- IsIndeterminate -->
                    <se:StswCheckBox IsChecked="{Binding IsIndeterminate}" Margin="0 3">
                        <Label Content="IsIndeterminate" FontSize="15" FontWeight="Medium"/>
                    </se:StswCheckBox>
                    <!-- Minimum -->
                    <Label Content="Minimum:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswNumericBox Format="N2" Margin="0 0 0 3" Value="{Binding Minimum}"/>
                    <!-- Maximum -->
                    <Label Content="Maximum:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswNumericBox Format="N2" Margin="0 0 0 3" Value="{Binding Maximum}"/>
                    <!-- State -->
                    <Label Content="State:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type se:StswProgressState}}"
                                     DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding State}" SelectedValuePath="Value"/>
                    <!-- TextMode -->
                    <Label Content="TextMode:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswEnumToListConverter.Instance}, ConverterParameter={x:Type se:StswProgressTextMode}}"
                                     DisplayMemberPath="Display" Margin="0 0 0 3" SelectedValue="{Binding TextMode}" SelectedValuePath="Value"/>
                    <!-- Value -->
                    <Label Content="Value:" FontSize="15" FontWeight="Medium" Margin="0 3 0 0"/>
                    <se:StswNumericBox Margin="0 0 0 3" Format="N2" Value="{Binding SelectedValue}"/>
                </StackPanel>
            </se:StswScrollViewer>
            <GridSplitter Margin="-5" Width="5"/>
            <!-- control -->
            <DockPanel Grid.Column="1" Margin="5" VerticalAlignment="Top">
                <se:StswProgressBar DockPanel.Dock="Top"
                                    IsEnabled="{Binding IsEnabled}"
                                    IsIndeterminate="{Binding IsIndeterminate}"
                                    Margin="5"
                                    Maximum="{Binding Maximum}"
                                    Minimum="{Binding Minimum}"
                                    State="{Binding State}"
                                    TextMode="{Binding TextMode}"
                                    Value="{Binding SelectedValue}"/>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
