                    <se:StswHeader.SubTexts>
                        <TextBlock Text="TEST"/>
                    </se:StswHeader.SubTexts>
                </se:StswHeader>
                <se:StswHeader IsEnabled="False" BorderBrush="#7777" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" IconData="{x:Static se:StswIcons.Account}" Content="Account" IconScale="auto"/>
